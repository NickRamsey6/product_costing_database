<!DOCTYPE html>
<html>
  <head>
    <title>TuscanStone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class='nav-style'>
        <div class="nav">
          <ul>
            <li><%= link_to "Issaquah", issaquah_path %></li>
            <li><%= link_to "Tiger Mountain", tigermountain_path %></li>
            <li><%= link_to "Mercer Island", mercerisland_path %></li>
            <li><%= link_to "New Castle", newcastle_path %></li>
            <li style="float:left"><%= link_to "Tuscan Stone", '/' %></li>
          </ul>
            <%= yield :nav %>
        </div>
      </nav>
    </header>
    <%= image_tag("../../assets/images/TuscanLogo.png") %>
    <%= yield %>
  </body>
</html>
